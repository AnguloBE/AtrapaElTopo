<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewJuego"
    android:background="@drawable/fondo"
    >

    <View
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/cuadro"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/cuadrado" />



    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tiempo"
        app:layout_constraintStart_toStartOf="@+id/cuadro"
        app:layout_constraintTop_toTopOf="@+id/cuadro"
        app:layout_constraintEnd_toStartOf="@id/textView5"
        app:layout_constraintBottom_toTopOf="@id/textView6"
        android:background="@drawable/cuadrito"
        android:paddingVertical="5dp"
        android:paddingHorizontal="10dp"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/puntaje"
        app:layout_constraintEnd_toEndOf="@id/cuadro"
        app:layout_constraintStart_toEndOf="@id/textView4"
        app:layout_constraintTop_toTopOf="@id/textView4"
        android:background="@drawable/cuadrito"
        android:paddingVertical="5dp"
        android:paddingHorizontal="10dp"
        />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/numTiempo"
        app:layout_constraintEnd_toStartOf="@+id/textView7"
        app:layout_constraintStart_toStartOf="@id/cuadro"
        app:layout_constraintTop_toBottomOf="@id/textView4"
        app:layout_constraintBottom_toBottomOf="@id/cuadro"
        android:layout_marginTop="10dp"
        android:background="@drawable/cuadrito"
        android:paddingVertical="5dp"
        android:paddingHorizontal="10dp"
        android:layout_marginBottom="8dp"
        />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/numPuntaje"
        app:layout_constraintEnd_toEndOf="@id/cuadro"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="@id/textView6"
        android:background="@drawable/cuadrito"
        android:paddingVertical="5dp"
        android:paddingHorizontal="10dp"
        />

